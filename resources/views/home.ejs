</section>

<h1 class="text-xl font-bold mb-8 px-10" id="all_food" style="text-align: center;margin-top: 30px;color: #90D26D;font-size: 2rem;font-family:Poppins", sans-serif;">Check Out The Items</h1>

<div class="menu" style="background-color: #c4f48575;">
    <% pizzas.forEach(function(pizza) { %>
    <div class="menu-item" style="border: 1px solid white; border-radius: 10px; text-align: center;">
      <!-- <img src="/img/<%= pizza.image %>" alt="Burger"  loading="lazy"> -->
      <h3 class="pizza_name"><%= pizza.name %></h3>
      <p class="name"><%= pizza.plag%></p>
      <p class="name"><%= pizza.pages%></p>
      <p class="name"><%= pizza.formatting%></p>
      <p class="name"><%= pizza.submission%></p>
      <span class="size" style="background-color: #9adb4475;padding: 10px 10px 10px 10px; border: 1px solid white; border-radius: 10px;"><%= pizza.completion_time%></span>
      <p class="price">Pricing-: â‚¹<%= pizza.price %></p>
      <button data-pizza="<%= JSON.stringify(pizza) %>"
        class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold btn-cart" style="background-color: #90D26D; margin: auto;">
        <span style="color: black; font-weight: bolder;">+</span>
        <span class="ml-4" style="color: black; font-weight: bold;">ADD</span>
    </button>
    </div>
    <% }) %>
</div>

